{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@vue/language-plugin-pug"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "./dist",
    "./.quasar",
    "./node_modules",
    "./src-capacitor",
    "./src-cordova",
    "./quasar.config.*.temporary.compiled*"
  ],
}